<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jim.sprjfx.view.SRegisterView">
   <children>
      <TextField fx:id="tfname" layoutX="54.0" layoutY="90.0" onMouseClicked="#tfclick" promptText="姓名" />
      <TextField fx:id="tfclass" layoutX="54.0" layoutY="136.0" onMouseClicked="#tfclick" promptText="班级" />
      <TextField fx:id="tfusername" layoutX="54.0" layoutY="185.0" onMouseClicked="#tfclick" promptText="用户名" />
      <TextField fx:id="tfpassword1" layoutX="54.0" layoutY="234.0" onMouseClicked="#tfclick" promptText="密码" />
      <TextField fx:id="tfpassword2" layoutX="54.0" layoutY="283.0" onMouseClicked="#tfclick" promptText="确认密码" />
      <Button fx:id="ButtonSubmit" layoutX="487.0" layoutY="326.0" mnemonicParsing="false" onMouseClicked="#ClickSubmit" onMouseMoved="#MovedSubmit" prefHeight="35.0" prefWidth="87.0" style="-fx-background-color: #33CCFF;" text="提  交" textFill="WHITE">
         <font>
            <Font name="Impact" size="15.0" />
         </font>
      </Button>



      <Pane prefHeight="64.0" prefWidth="600.0" style="-fx-background-color: #555566;">
         <children>
            <Label layoutX="14.0" layoutY="21.0" text="学生注册中心" textFill="WHITE">
               <font>
                  <Font size="35.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Label fx:id="warning" layoutX="54.0" layoutY="326.0" textFill="#f20000" />
      <Label fx:id="success" layoutX="54.0" layoutY="318.0" textFill="#287931" />
      <Button layoutX="390.0" layoutY="326.0" onMouseClicked="#ClickGotoLogin" mnemonicParsing="false" prefHeight="35.0" prefWidth="87.0" text="去登录" />
   </children>
</AnchorPane>
